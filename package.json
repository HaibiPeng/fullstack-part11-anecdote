{
  "name": "fullstack-p11-own-pipeline",
  "version": "0.0.1",
  "engines": {
    "node": "14.17.x"
  },
  "description": "Custom pipeline from bloglist app",
  "main": "index.js",
  "scripts": {
    "start:prod": "cross-env NODE_ENV=production node index.js",
    "start": "node index.js",
    "dev": "cross-env NODE_DEV=development nodemon index.js",
    "build": "cd client && npm install && npm run build",
    "deploy": "git push heroku main",
    "logs:prod": "heroku logs --tail",
    "lint": "npm run lint:server && npm run lint:client",
    "lint:server": "eslint .",
    "lint:client": "cd client && npm install && npm run eslint",
    "test:server": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "test:client": "cd client && npm run test",
    "start:test": "cross-env NODE_ENV=test node index.js"
  },
  "author": "Haibi Peng",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-jwt": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.20",
    "mongoose": "^5.11.10",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.17.0",
    "jest": "^26.6.0",
    "nodemon": "^2.0.6",
    "supertest": "^6.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
